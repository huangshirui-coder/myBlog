<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.demo.mapper.TagMapper">
    <update id="updateStatus">
        update t_tag set status = #{status} where uid = #{uid}
    </update>

    <select id="selectBatchUids" resultType="com.example.demo.entity.Tag">
        select uid,content,status,click_count
        from t_tag
        where uid in
        <foreach collection="uids" open="(" close=")" item="uid" separator=",">
            #{uid}
        </foreach>
    </select>
</mapper>